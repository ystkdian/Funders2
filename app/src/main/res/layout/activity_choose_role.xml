<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin"
    android:background="@color/white">

    <TextView
        style="@style/H1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/choose_role"
        android:textColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:cardBackgroundColor="@color/purple_10"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entrepreneur"
                app:tint="@color/purple_50"/>

            <TextView
                style="@style/H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umkm"
                android:textColor="@color/purple_50"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="50dp"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:cardBackgroundColor="@color/purple_10"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/angel_investor"
                app:tint="@color/purple_50"/>

            <TextView
                style="@style/H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/investor"
                android:textColor="@color/purple_50"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>